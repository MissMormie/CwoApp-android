<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="cwoapp.nl.cwoapp.CursistDetailActivity"
        tools:layout_editor_absoluteY="81dp"
        tools:layout_editor_absoluteX="0dp">


        <TextView
            android:id="@+id/textViewOpmerkingenLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/opmerkingen"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewFoto"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/textViewOpmerking"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="7dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewOpmerkingenLabel"
            tools:text="Sonja surft alleen als het erg warm is, wind maakt minder uit." />

        <TextView
            android:id="@+id/textViewPaspoortLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/paspoort"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textviewNaam"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:ignore="RtlHardcoded" />

        <ImageView
            android:id="@+id/imageViewFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_user_image"
            tools:layout_editor_absoluteY="-4dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="ContentDescription,MissingConstraints,RtlHardcoded" />

        <TextView
            android:id="@+id/textViewPaspoort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toRightOf="@+id/textViewPaspoortLabel"
            app:layout_constraintTop_toBottomOf="@+id/textviewNaam"
            tools:ignore="RtlHardcoded"
            tools:text="ja" />

        <TextView
            android:id="@+id/textviewNaam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="Sonja Duijvesteijn"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/text_size_large" />

        <ProgressBar
            android:id="@+id/pb_loading_indicator"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio=""
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_training_lijst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:scrollbars="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewOpmerking" />

    </android.support.constraint.ConstraintLayout>
</layout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cwoapp.nl.cwoapp.CursistDetail"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <EditText
        android:id="@+id/textViewCursistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:text="Sonja Duijvesteijn"
        android:layout_marginStart="8dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="145dp" />

    <TextView
        android:id="@+id/textViewOpmerkingenLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/opmerkingen"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:layout_marginStart="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textViewOpmerking"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:text="Sonja surft alleen als het erg warm is, wind maakt minder uit."
        android:layout_marginStart="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewOpmerkingenLabel" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/paspoort"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="188dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_user_image"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-4dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        tools:layout_editor_absoluteY="188dp"
        tools:text="ja" />


</android.support.constraint.ConstraintLayout>

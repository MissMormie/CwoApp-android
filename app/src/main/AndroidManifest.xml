<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cwoapp.nl.cwoapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- TODO uitzoeken of ik launchmode nodig heb hier -->
        <activity
            android:name=".CursistListActivity"
            android:label="@string/cursisten_lijst"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <!-- TODO Change label once i know what it does ;) -->
        <activity
            android:name=".CursistDetailActivity"
            android:label="@string/cursist"
            android:parentActivityName=".CursistListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".CursistListActivity" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/action_settings"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".CursistFormActivity"
            android:label="@string/nieuwe_cursist"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".TrainingActivity" />
        <activity android:name=".CursistBehaaldEisActivity"></activity>
    </application>

</manifest>